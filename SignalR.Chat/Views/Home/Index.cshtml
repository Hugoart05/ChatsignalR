@using SignalR.Chat.ViewModels
@model List<ContatoViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid">
    <div class="row" style="height: 100vh">
        <div class="col-lg-4 col-md-5 col-sm-12  bg-primary">
            <div class="row d-flex justify-content-center  ">
                <section class="profile-header">
                    <img src=" https://picsum.photos/200/300" class="avatar" />
                    <p class="text-light">@User.Identity.Name</p>
                    <a class="link-info ms-5 " href="/account/sair">
                        <i class="bi bi-box-arrow-left" style="font-size: 28pt"></i>
                    </a>
                </section>
                <section class="tools-area col-12 d-flex justify-content-between mb-2 p-3 position-relative">
                    <button class="btn-search  btn d-flex flex-column " id="buscaUsuarios" type="submit">
                        <i class=" header-icons bi bi-search " style=""></i>
                    </button>
                    <form method="post">
                        <input class="hidden-box search-input" id="searchinput" type="text" placeholder="pesquise um contato..." />
                    </form>
                    <button class="btn " id="moreSettings">
                        <i class=" header-icons bi bi-three-dots-vertical"></i>
                    </button>
                    <div class="box-seach-users hidden-box" id="boxUsers">
                        <div class="row gap-2">
                            <div class="col-12 d-flex justify-content-end">
                                <button class="btn-close" id="closebox"></button>
                            </div>
                            <section class="col-12 p-1 d-flex flex-column gap-3"  id="userCards">
                            </section>
                        </div>
                    </div>
                </section>
                <main class="row d-flex justify-content-center">
                    @{
                        if(Model != null)
                        {
                            foreach(var item in Model)
                            {
                                <div class="col-12 card-contato ps-4 parent-div " id="@item.Id" >
                                    <img src=" https://picsum.photos/200/300" class="avatar" />
                                    <div class="text-message-container  ">
                                        <p class="title text-truncate">@item.Nome</p>
                                        <p class="last-message text-truncate">@item.UltimaMensagem</p>
                                    </div>
                                    <div class="date ps-2">
                                        <p>@item.CreatedAt.ToString()</p>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="col-12 d-flex flex-column align-items-center">
                                <p class="text-light">Você ainda não tem contatos</p>
                                <a class="btn btn-primary">+ Comece agora</a>
                            </div>
                        }
                    }
                </main>
            </div>
        </div>
        <div class="col-lg-8 col-md-7 p-0" style="background-image:url(https://i.pinimg.com/originals/8c/98/99/8c98994518b575bfd8c949e91d20548b.jpg)">
            <div class="container-fluid ">
                <div class=" main-container row p-2 p-md-2 p-sm-0">
                    <div class="col-12 d-flex justify-content-between align-items-center  pe-3 ps-4 pe-sm-0 ps-sm-0 rounded-3 blur" style=" height:100px;">
                        <div class=" d-flex gap-2 align-items-center  ps-4">
                            <img src=" https://picsum.photos/200/300" class="avatar" />
                            <p class="text-dark h4" style="margin:0">Hugo silva </p>
                        </div>
                        <div class="pe-4">
                            <a class="bi bi-three-dots-vertical"></a>
                        </div>
                    </div>
                    <section class="chat-messages col-12 p-3   mt-2 rounded-2 blur" id="text-area">
                    </section>
                    <section class="col-12  d-flex gap-2 p-3 blur align-items-center mt-2">
                        <input class=" message-input form-control rounded-3 ps-3" />
                        <button class="send-button ">
                            <i class="bi bi-send"></i>
                        </button>
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/apphome.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/containerMessage.css" asp-append-version="true"/>
}
@section Scripts{
    <script src="~/js/AppHome.js" type="text/javascript" asp-append-version="true"></script>
}